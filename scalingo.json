{
  "addons": [
    {
      "plan": "postgresql:postgresql-sandbox"
    }
  ],
  "env": {
    "RAILS_DEFAULT_HOST": {
      "generator": "template",
      "template": "%APP%.osc-fr1.scalingo.io"
    }
  },
  "formation": {
    "web": {
      "amount": 1,
      "size": "S"
    }
  },
  "scripts": {
    "first-deploy": "bundle exec rails db:schema:load db:seed",
    "postdeploy": "bundle exex rails db:migrate"
  }
}
